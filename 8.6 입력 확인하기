#include<stdio.h>

int main()
{
	printf("Please input an integer and press enter.\n");

	long input;
	char c;

	while (scanf("%1d", &input) != 1) {
		printf("Your input - ");
		while ((c = getchar()) != '\n') // 사용자 입력이 버퍼에 남아있음
			putchar(c);                 // 버퍼 비우는 코드
		printf(" - is not an integer. Please try again.\n");
	}
	printf("Your input %1d is an iteger. Thank you.\n", input);
}
